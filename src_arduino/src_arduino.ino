void setup() {
  // limited this value, see src_linux/Display.cs for more info
  Serial.begin(921600);

  // timeout must be smaller than display refresh delay
  // or display content may be shifted to the right
  Serial.setTimeout(100);

  // draw initial boot screen (currently in framebuffer)
  // this screen only shows until the first image is received
  draw_framebuffer();
  
  // set LCD backlight brightness to 50%
  pinMode(5, OUTPUT);
  analogWrite(5, 0x80);
}

void loop(void) {
  // receive one full image into framebuffer
  if (Serial.readBytes(fb, 1024) == 1024) {
    // draw the framebuffer
    draw_framebuffer();
  }
}

// for more info on the picture loop see
// https://github.com/olikraus/u8glib/wiki/tpictureloop
void draw_framebuffer(void) {
  u8g.firstPage();
  do {
    // draw the framebuffer variable 'fb'
    u8g.drawXBM(0, 0, 128, 64, fb);
  } while( u8g.nextPage() );
}
